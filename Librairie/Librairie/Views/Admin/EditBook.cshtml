@model BookVM

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required value="@Model.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" value="@Model.Category" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" required value="@Model.Price.ToString("f")" />
    </div>
    <div class="form-group">
        <label asp-for="Authors"></label>
        <div class="container-fluid mb-2">
            <button id="addInput" class="btn btn-sm btn-outline-primary btn-block z-depth-0" type="button"><i class="fas fa-plus"></i></button>
        </div>
        <div id="toAdd">
            @for (int i = 0; i < Model.Authors.Count; i++)
            {
                <div class="form-group form-inline">
                    <input type="hidden" asp-for="@Model.Authors[i].Id" class="form-control" readonly value="@Model.Authors[i].Id" />
                    <input type="text" asp-for="@Model.Authors[i].FirstName" class="form-control" readonly value="@Model.Authors[i].FirstName" />
                    <input type="text" asp-for="@Model.Authors[i].LastName" class="form-control mx-2" readonly value="@Model.Authors[i].LastName" />
                    <button type="button" onclick="RemoveInput(this)" class="btn btn-sm btn-danger z-depth-0 form-control m-0"><i class="fas fa-times"></i></button>
                </div>
            }
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>
</form>